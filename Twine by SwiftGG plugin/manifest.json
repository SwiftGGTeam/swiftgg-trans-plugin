{
    "name": "Twine by SwiftGG",
    "description": "Apple document",
    "version": "1.0.10",
    "manifest_version": 3,
    "default_locale": "zh_CN",
    "background": {
        "service_worker": "./background.js"
    },
    "action": {
        "default_popup": "./popup.html",
        "default_icon": {
            "128": "/source/intro/swiftLogo.png"
        }
    },
    "icons": {
        "128": "/source/intro/swiftLogo.png"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://developer.apple.com/*",
        "*://developer.apple.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://developer.apple.com/*",
                "*://developer.apple.com/*"
            ],
            "css": [
                "content_script.css"
            ],
            "js": [
                "content_script.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "float.html",
                "float.css",
                "data/data.json",
                "float.js",
                "source/intro/swiftgg-logo.svg",
                "source/intro/swiftgg-status-icon-check.svg",
                "source/intro/swiftgg-status-icon-pause.svg",
                "source/intro/swiftgg-status-icon-xmark.svg"
            ],
            "matches": [
                "https://developer.apple.com/*",
                "*://developer.apple.com/*"
            ]
        }
    ]
}
